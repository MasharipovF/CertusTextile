<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingEnd="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="Сохранить со следующими параметрами? "
            android:textColor="#292929"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Тип товара:"
                android:textColor="#292929"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/saveDialogType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="some message"
                android:textColor="#292929"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пол товара:"
                android:textColor="#292929"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/saveDialogGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="some message"
                android:textColor="#292929"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingEnd="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:text="ВНИМАНИЕ!! У вас есть измененные, но не добавленные товары. Пожалуйста, проверьте сначала свои изменения"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/saveDialogCancelBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="ОТМЕНА"
                android:textColor="#009688"
                android:textSize="15sp" />

            <Button
                android:id="@+id/saveDialogOKBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="ДА"
                android:textColor="#009688"
                android:textSize="15sp" />

            <Button
                android:id="@+id/saveDialogNOBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/saveDialogOKBtn"
                android:text="НЕТ"
                android:textColor="#009688"
                android:textSize="15sp" />
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
