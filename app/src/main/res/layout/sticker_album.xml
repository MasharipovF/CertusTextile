<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Выберите альбом:"
            android:textColor="@android:color/primary_text_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/albumRecycler"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:padding="5dp"
            tools:listitem="@layout/album_row" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/albumCancelBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="НАЗАД/ОТМЕНА"
                android:layout_alignParentLeft="true"
                android:textColor="#009688"
                android:textSize="15sp" />


            <Button
                android:id="@+id/albumAllBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ПОКАЗАТЬ ВСЕ СТИКЕРЫ"
                android:textColor="#009688"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/albumOkBtn"
                android:layout_toStartOf="@+id/albumOkBtn" />

            <Button
                android:id="@+id/albumOkBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ЗАГРУЗИТЬ ЭТОТ АЛЬБОМ"
                android:layout_alignParentRight="true"
                android:textColor="#009688"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>