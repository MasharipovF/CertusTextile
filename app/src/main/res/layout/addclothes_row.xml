<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addstyle"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_new_picture"

            />

        <TextView
            android:id="@+id/txt0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Цвет"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addfront"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_new_picture"
            />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Вид спереди"

            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addback"

            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerInside"

            android:src="@drawable/ic_action_new_picture" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Вид сзади"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addside"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_new_picture" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Вид сбоку"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/size_spin"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Размер"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerInside"

            android:src="@drawable/ic_add_green_800_24dp" />

        <TextView
            android:id="@+id/addordel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Добавить"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>



