<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
   >


    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/yonpanel"
        android:orientation="vertical"
        android:layout_marginRight="13dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="68"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yonichtepa"
                android:padding="1dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:id="@+id/imageView4"
                android:text="@string/nakleyki"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#1f1f1f"
                />
            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nakleyki"

            android:layout_margin="5dp"
                android:layout_above="@+id/imageView3"
                android:layout_below="@+id/imageView4">

        </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/pasgastrel"
                android:layout_marginBottom="5dp"
                android:padding="9dp"
                android:id="@+id/imageView3" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="32"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yonichpass"
                android:padding="1dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:text="@string/nastroyki"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#1f1f1f"
                android:id="@+id/imageView8" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nastroyka"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_below="@+id/imageView8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/razmer"
                        android:textColor="#454545"
                        android:paddingLeft="5dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#454545"
                        android:textSize="18sp"
                        android:id="@+id/razmerpolzunok"
                        android:background="@drawable/joystik"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/povorot"
                        android:textColor="#454545"
                        android:paddingLeft="5dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#454545"
                        android:textSize="18sp"
                        android:id="@+id/povorot"
                        android:background="@drawable/joystik"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/centr"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/orta"
            android:scaleType="fitXY"/>
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"/>
        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="240dp"
            android:background="@drawable/yonknop"
            android:layout_marginRight="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/glaz"
                android:src="@drawable/eyes"
                android:padding="13dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/burish"
                android:src="@drawable/povorot"
                android:padding="13dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/share"
                android:src="@drawable/sharee"
                android:padding="13dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/shot"
                android:src="@drawable/camera"
                android:padding="13dp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="16dp"
            android:src="@drawable/knop"/>
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="16dp"
            android:src="@drawable/knop"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="16dp"
            android:src="@drawable/knop"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="16dp"
            android:src="@drawable/knop"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/panelanim"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/animinr">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/eyes"
            android:padding="35dp"
            android:id="@+id/backa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:background="@drawable/yonpanel"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="68"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yonichtepa"
                android:scaleType="fitXY"
                android:padding="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:id="@+id/imageView2"
                android:text="@string/tovari"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#1f1f1f"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/imageView"
                android:id="@+id/tovari"
                android:layout_below="@+id/imageView2"
                android:layout_margin="5dp">

            </FrameLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/pasgastrel"
                android:layout_marginBottom="5dp"
                android:padding="9dp"
                android:id="@+id/imageView" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="32"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yonichpass"
                android:padding="1dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:text="@string/sveta"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#1f1f1f"
                android:id="@+id/imageView6" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/stili"

                android:layout_margin="5dp"

                android:layout_above="@+id/imageView5"
                android:layout_below="@+id/imageView6">

            </FrameLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/pasgastrel"
                android:layout_marginBottom="5dp"
                android:padding="9dp"
                android:id="@+id/imageView5" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
