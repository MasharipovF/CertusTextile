<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/yonpanel"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="68">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/yonichtepa" />

            <TextView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:gravity="center"
                android:text="@string/nakleyki"
                android:textColor="#1f1f1f"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/nakleyki"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/stickerPastStrelka"
                android:layout_below="@+id/imageView4"
                android:layout_margin="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/stickerRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </FrameLayout>

            <ImageView
                android:id="@+id/stickerPastStrelka"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:padding="9dp"
                android:src="@drawable/pasgastrel" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="32">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/yonichpass" />

            <TextView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:gravity="center"
                android:text="@string/nastroyki"
                android:textColor="#1f1f1f"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/nastroyka"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView8"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="@string/razmer"
                        android:textColor="#454545"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/razmerpolzunok"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/joystik"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="#454545"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="@string/povorot"
                        android:textColor="#454545"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/povorot"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/joystik"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#454545"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/centr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_toRightOf="@+id/linearLayout2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/orta" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="75dp"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="240dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/yonknop"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/glaz"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:src="@drawable/eyes" />

            <ImageView
                android:id="@+id/burish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:src="@drawable/povorot" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:src="@drawable/sharee" />

            <ImageView
                android:id="@+id/shot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:src="@drawable/discard" />

        </LinearLayout>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="16dp"
            android:src="@drawable/knop" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/knop" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/knop" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@drawable/knop" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/panelanim"
        android:layout_width="90dp"
        android:layout_height="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/animinr"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageView

            android:id="@+id/yoqa1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
           android:layout_marginLeft="28dp"
           android:layout_marginRight="18dp"
            android:src="@drawable/eyes" />

        <ImageView
            android:id="@+id/yoqa2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/eyes" />

        <ImageView
            android:id="@+id/yoqa3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="18dp"

            android:src="@drawable/eyes" />

        <ImageView
            android:id="@+id/yoqa4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:src="@drawable/eyes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/yonpanel"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="68">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/yonichtepa" />

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:gravity="center"
                android:text="@string/tovari"
                android:textColor="#1f1f1f"
                android:textSize="20sp" />



            <FrameLayout
                android:id="@+id/tovari"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tovarPastStrelka"
                android:layout_below="@+id/imageView2"
                android:layout_margin="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tovarRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </FrameLayout>

            <ImageView
                android:id="@+id/tovarPastStrelka"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:padding="9dp"
                android:src="@drawable/pasgastrel" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="32">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/yonichpass" />

            <TextView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/qosh"
                android:gravity="center"
                android:text="@string/sveta"
                android:textColor="#1f1f1f"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/stili"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/stylePastStrelka"
                android:layout_below="@+id/imageView6"
                android:layout_margin="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/styleRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </FrameLayout>

            <ImageView
                android:id="@+id/stylePastStrelka"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:padding="9dp"
                android:src="@drawable/pasgastrel" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
